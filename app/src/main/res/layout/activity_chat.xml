<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height_a"
        android:background="@color/title_bar_bg_color">
        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="@dimen/theme_height_a"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/bar_back_btn"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/txt_remark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/title_bar_text_center_color"
            android:textSize="@dimen/title_bar_text_center_size"/>

        <ImageView
            android:id="@+id/btn_friend_info"
            android:layout_width="@dimen/theme_height_a"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@drawable/bar_friend_info_btn"
            android:contentDescription="@null"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/theme_margin_five"
                android:layout_marginRight="@dimen/theme_margin_five"
                android:paddingBottom="@dimen/theme_padding_five"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>

    <include layout="@layout/layout_split_line_gray_e"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--输入框和按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/theme_height_b"
            android:background="@color/theme_color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_sound"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/theme_margin_five"
                android:layout_marginRight="@dimen/theme_margin_five"
                android:src="@drawable/im_sound_btn"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/img_keyboard"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/theme_margin_five"
                android:layout_marginRight="@dimen/theme_margin_five"
                android:src="@drawable/im_keyboard_btn"
                android:contentDescription="@null"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/edit_msg"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/theme_padding_five"
                android:paddingRight="@dimen/theme_padding_five"
                android:background="@drawable/shape_rect_white_border_gray_c"
                android:maxLines="5"
                android:inputType="text"
                android:visibility="visible"
                android:textColor="@color/theme_color_black_a"
                android:textSize="@dimen/theme_text_size_sixteen"/>
            <TextView
                android:id="@+id/txt_speak"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/selector_im_speak"
                android:gravity="center"
                android:text="@string/im_press_speak"
                android:textColor="@color/theme_color_gray_c"
                android:textSize="@dimen/theme_text_size_fourteen"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/img_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/theme_margin_five"
                android:layout_marginRight="@dimen/theme_margin_five"
                android:src="@drawable/im_add_btn"
                android:contentDescription="@null"
                android:visibility="visible"/>
            <Button
                android:id="@+id/btn_send_msg"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/theme_margin_ten"
                android:layout_marginRight="@dimen/theme_margin_ten"
                android:background="@drawable/selector_rect_theme_color"
                android:text="@string/im_send"
                android:textColor="@color/theme_color_white"
                android:textSize="@dimen/theme_text_size_fourteen"
                android:visibility="gone"/>
        </LinearLayout>
        <include layout="@layout/layout_split_line_gray_e"/>
        <!--相册、红包等-->
        <LinearLayout
            android:id="@+id/llay_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <lib.widget.PagerIndicator
                android:id="@+id/pager_indicator"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/theme_color_white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <lib.widget.ActionTitleBar
        xmlns:atb="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        atb:right_image="@drawable/icon_friend_info"/>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:paddingBottom="@dimen/padding_5"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>

    <include layout="@layout/layout_split_line_gray_e"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--输入框和按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_sound"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/im_sound_btn"
                android:contentDescription="@null"/>
            <ImageView
                android:id="@+id/img_keyboard"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/im_keyboard_btn"
                android:contentDescription="@null"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/edit_msg"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_5"
                android:paddingRight="@dimen/padding_5"
                android:background="@drawable/shape_rect_white_border_gray_c"
                android:maxLines="5"
                android:inputType="text"
                android:visibility="visible"
                android:textColor="@color/black_a"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/txt_speak"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/selector_im_speak"
                android:gravity="center"
                android:text="@string/im_press_speak"
                android:textColor="@color/gray_c"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/img_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/im_add_btn"
                android:contentDescription="@null"
                android:visibility="visible"/>
            <Button
                android:id="@+id/btn_send_msg"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/selector_rect2_theme_color"
                android:text="@string/im_send"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>
        </LinearLayout>
        <include layout="@layout/layout_split_line_gray_e"/>
        <!--相册、红包等-->
        <LinearLayout
            android:id="@+id/llay_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <lib.widget.PagerIndicator
                android:id="@+id/pager_indicator"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

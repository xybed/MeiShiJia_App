<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <lib.widget.ActionTitleBar
        xmlns:atb="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        atb:title="@string/im_detail_info"/>

    <lib.widget.FrameProgressLayout
        android:id="@+id/frame_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:padding="@dimen/padding_15"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@drawable/icon_default_avatar"
            android:contentDescription="@null"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_remark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="备注"
                    android:textColor="@color/black_a"
                    android:textSize="@dimen/text_size_16"/>
                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:src="@drawable/icon_male"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_username"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="美食号：15606954708"
                android:textColor="@color/gray_c"
                android:textSize="@dimen/text_size_14"/>
            <TextView
                android:id="@+id/txt_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="昵称：大木神"
                android:textColor="@color/gray_c"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_set_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/selector_bg_white_gray_h"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:text="@string/im_set_remark"
        android:textColor="@color/black_a"
        android:textSize="@dimen/text_size_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/im_region"
                android:textColor="@color/black_a"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/txt_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福建  厦门"
                android:textColor="@color/gray_c"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <include layout="@layout/layout_split_line_gray_e"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_44"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/im_signature"
                android:textColor="@color/black_a"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:id="@+id/txt_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hala Madrid"
                android:textColor="@color/gray_c"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_send_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"
        android:background="@drawable/selector_rect_theme_color"
        android:text="@string/im_send_message"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"/>

</LinearLayout>

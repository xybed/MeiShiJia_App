<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:background="@color/title_bar_bg_color">
        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="@dimen/height_44"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/bar_back_btn"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/im_remark_info"
            android:textColor="@color/title_bar_text_center_color"
            android:textSize="@dimen/title_bar_text_center_size"/>

        <TextView
            android:id="@+id/txt_complete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:text="@string/com_complete"
            android:gravity="center"
            android:textColor="@color/title_bar_text_right_color"
            android:textSize="@dimen/title_bar_text_right_size"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:text="@string/im_remark"
        android:textColor="@color/black_a"
        android:textSize="@dimen/text_size_16"/>

    <EditText
        android:id="@+id/edit_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:maxLength="20"
        android:hint="@string/im_remark"
        android:textColorHint="@color/gray_b"
        android:textColor="@color/gray_c"
        android:textSize="@dimen/text_size_14"/>
</LinearLayout>

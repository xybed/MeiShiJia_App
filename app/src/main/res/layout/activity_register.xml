<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height_a"
        android:background="@color/theme_color">
        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="@dimen/theme_height_a"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/bar_back_btn"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/user_register"
            android:textColor="@color/theme_color_white"
            android:textSize="@dimen/title_bar_text_center_size"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height_a"
        android:layout_marginTop="@dimen/theme_margin_fifty"
        android:layout_marginLeft="@dimen/theme_margin_forty"
        android:layout_marginRight="@dimen/theme_margin_forty"
        android:paddingLeft="@dimen/theme_padding_ten"
        android:paddingRight="@dimen/theme_padding_ten"
        android:background="@drawable/shape_rect_white_border_gray_b"
        android:inputType="phone"
        android:maxLength="11"
        android:hint="@string/user_username_hint"
        android:textColorHint="@color/theme_color_gray_b"
        android:textSize="@dimen/theme_text_size_fourteen"
        android:textColor="@color/theme_color"
        android:textCursorDrawable="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height_a"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/theme_margin_twenty"
        android:layout_marginLeft="@dimen/theme_margin_forty"
        android:layout_marginRight="@dimen/theme_margin_forty"
        android:background="@drawable/shape_rect_white_border_gray_b">
        <!--密码的布局-->
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/theme_padding_ten"
            android:paddingRight="@dimen/theme_padding_ten"
            android:background="@null"
            android:maxLength="10"
            android:hint="@string/user_password_hint"
            android:textColorHint="@color/theme_color_gray_b"
            android:textSize="@dimen/theme_text_size_fourteen"
            android:textColor="@color/theme_color"
            android:textCursorDrawable="@null"
            android:inputType="textPassword" />
        <ImageView
            android:id="@+id/img_password_look"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/icon_password_unlook"
            android:contentDescription="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/theme_margin_twenty"
        android:layout_marginLeft="@dimen/theme_margin_forty"
        android:layout_marginRight="@dimen/theme_margin_forty"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edit_verify_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/theme_height_a"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/theme_margin_ten"
            android:paddingLeft="@dimen/theme_padding_ten"
            android:paddingRight="@dimen/theme_padding_ten"
            android:background="@drawable/shape_rect_white_border_gray_b"
            android:maxLength="10"
            android:inputType="number"
            android:hint="@string/user_verify_code"
            android:textColorHint="@color/theme_color_gray_b"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/theme_text_size_fourteen"
            android:textCursorDrawable="@null" />
        <Button
            android:id="@+id/btn_get_verify"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/theme_height_a"
            android:minWidth="80dp"
            android:background="@drawable/shape_rect_theme_color"
            android:text="@string/user_get_verify_code"
            android:textColor="@color/theme_color_white"
            android:textSize="@dimen/theme_text_size_fourteen"
            android:layout_gravity="bottom"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height_a"
        android:layout_marginTop="@dimen/theme_margin_twenty"
        android:layout_marginLeft="@dimen/theme_margin_forty"
        android:layout_marginRight="@dimen/theme_margin_forty"
        android:background="@drawable/shape_rect_gray_b"
        android:gravity="center"
        android:text="@string/user_register"
        android:textColor="@color/theme_color_white"
        android:textSize="@dimen/theme_text_size_fourteen" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/theme_height_a"
        android:background="@color/theme_color">
        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="@dimen/theme_height_a"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/bar_back_btn"
            android:contentDescription="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/com_setting"
            android:textColor="@color/theme_color_white"
            android:textSize="@dimen/title_bar_text_center_size"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llay_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/theme_height_a"
                android:layout_marginTop="@dimen/theme_margin_ten"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_logout"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/theme_text_size_sixteen"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

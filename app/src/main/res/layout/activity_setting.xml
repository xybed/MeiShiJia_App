<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <lib.widget.ActionTitleBar
        xmlns:atb="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        atb:title="@string/com_setting"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llay_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/theme_height_a"
                android:layout_marginTop="@dimen/theme_margin_ten"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_logout"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/theme_text_size_sixteen"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

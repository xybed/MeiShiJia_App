<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llay_top_img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_mine">
                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/avatar_img_size"
                    android:layout_height="@dimen/avatar_img_size"
                    android:padding="@dimen/theme_padding_three"
                    android:background="@drawable/shape_circle_white"
                    android:contentDescription="@null"/>
                <TextView
                    android:id="@+id/txt_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/theme_margin_ten"
                    android:text="@string/user_login"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/theme_text_size_fourteen"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_chat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/theme_height_a"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/theme_margin_fifteen"
                    android:layout_marginRight="@dimen/theme_margin_fifteen"
                    android:src="@drawable/icon_chat"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/im_chat"
                    android:textColor="@color/theme_color_black_a"
                    android:textSize="@dimen/theme_text_size_fourteen"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_contacts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/theme_height_a"
                android:layout_marginTop="0.5dp"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/theme_margin_fifteen"
                    android:layout_marginRight="@dimen/theme_margin_fifteen"
                    android:src="@drawable/icon_contacts"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/im_contacts"
                    android:textColor="@color/theme_color_black_a"
                    android:textSize="@dimen/theme_text_size_fourteen"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/theme_height_a"
                android:layout_marginTop="@dimen/theme_margin_ten"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/theme_margin_fifteen"
                    android:layout_marginRight="@dimen/theme_margin_fifteen"
                    android:src="@drawable/icon_setting"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/com_setting"
                    android:textColor="@color/theme_color_black_a"
                    android:textSize="@dimen/theme_text_size_fourteen"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llay_top_img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_main_banner">
                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="@dimen/avatar_img_size"
                    android:layout_height="@dimen/avatar_img_size"
                    android:padding="@dimen/padding_3"
                    android:background="@drawable/shape_circle_white"
                    android:contentDescription="@null"/>
                <TextView
                    android:id="@+id/txt_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/user_login"
                    android:textColor="@color/black_a"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:paddingLeft="@dimen/padding_15"
                android:paddingRight="@dimen/padding_15"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/order_mine_order"
                    android:textColor="@color/black_b"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_all_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_see_all_order"
                    android:textColor="@color/gray_c"
                    android:textSize="@dimen/text_size_14"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_arrow_right"
                    android:contentDescription="@null"/>
            </LinearLayout>
            <include layout="@layout/layout_split_line_gray_e"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="0.5dp"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/llay_wait_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_order_status_pay"
                        android:contentDescription="@null"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/order_wait_pay"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_a"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llay_wait_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_order_status_send"
                        android:contentDescription="@null"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/order_wait_send"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_a"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llay_wait_receive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_order_status_deliver"
                        android:contentDescription="@null"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/order_wait_receive"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_a"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llay_wait_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_order_status_comment"
                        android:contentDescription="@null"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/order_wait_comment"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_a"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llay_refund"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_order_status_refund"
                        android:contentDescription="@null"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/order_refund"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/black_a"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_receiving_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:src="@drawable/icon_receiving_address"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_receiving_address"
                    android:textColor="@color/black_a"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_conversation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:src="@drawable/icon_chat"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/im_chat"
                    android:textColor="@color/black_a"
                    android:textSize="@dimen/text_size_14"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:gravity="right|center_vertical">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_msg_unread"
                        android:layout_width="@dimen/unread_red_dot_size"
                        android:layout_height="@dimen/unread_red_dot_size"
                        android:background="@drawable/shape_circle_red"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/layout_split_line_gray_e"/>

            <LinearLayout
                android:id="@+id/llay_contacts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:src="@drawable/icon_contacts"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/im_contacts"
                    android:textColor="@color/black_a"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/selector_bg_white_gray_h"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:src="@drawable/icon_setting"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/com_setting"
                    android:textColor="@color/black_a"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

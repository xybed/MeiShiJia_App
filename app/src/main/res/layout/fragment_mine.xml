<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme_bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/llay_top_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_mine">
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/avatar_img_size"
                android:layout_height="@dimen/avatar_img_size"
                android:padding="@dimen/theme_padding_three"
                android:background="@drawable/shape_circle_white"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/txt_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/theme_margin_ten"
                android:text="@string/user_login"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/theme_text_size_fourteen"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

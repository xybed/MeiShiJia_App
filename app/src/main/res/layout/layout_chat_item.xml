<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_horizontal"
        android:text="2017/4/17 10:33"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/gray_c"/>
    <TextView
        android:id="@+id/txt_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_gray_e"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_3"
        android:paddingBottom="@dimen/padding_3"
        android:layout_gravity="center_horizontal"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llay_left_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_friend_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/icon_default_avatar"
                android:contentDescription="@null"/>
            <RelativeLayout
                android:id="@+id/rlay_left_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/im_left_message_panel"
                android:gravity="center"
                android:clickable="true"
                android:longClickable="true"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlay_right_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_default_avatar"
                android:contentDescription="@null"/>
            <RelativeLayout
                android:id="@+id/rlay_right_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_avatar"
                android:background="@drawable/im_right_message_panel"
                android:gravity="center"
                android:clickable="true"
                android:longClickable="true"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/rlay_right_message"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_centerVertical="true">
                <ProgressBar
                    android:id="@+id/progress_send"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/img_error"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/im_error_btn"
                    android:contentDescription="@null"
                    android:visibility="gone"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <lib.swipelayout.SwipeLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llay_swipe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#333"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:background="@color/theme_color_red_a"
                android:padding="20dp"
                android:src="@drawable/icon_delete"
                android:contentDescription="@null"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg_white_gray_h"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_default_avatar"
                android:scaleType="centerCrop"
                android:contentDescription="@null"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/theme_padding_fifteen"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:maxLength="20"
                        android:text="连丑男"
                        android:textColor="@color/theme_color_black_a"
                        android:textSize="@dimen/theme_text_size_eighteen" />

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignBaseline="@+id/txt_remark"
                        android:text="13:14"
                        android:textColor="@color/theme_color_gray_b"
                        android:textSize="@dimen/theme_text_size_twelve"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/txt_msg_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/theme_padding_ten"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="连丑男"
                        android:textColor="@color/theme_color_gray_c"
                        android:textSize="@dimen/theme_text_size_sixteen"/>

                    <TextView
                        android:id="@+id/txt_unread_msg"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="@drawable/shape_circle_red"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/theme_color_white"
                        android:textSize="@dimen/theme_text_size_twelve" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </lib.swipelayout.SwipeLayout>

    <include layout="@layout/layout_split_line_gray_e"/>
</LinearLayout>
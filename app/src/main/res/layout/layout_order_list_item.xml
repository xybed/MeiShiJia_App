<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15"
            android:paddingTop="@dimen/padding_15"
            android:background="@drawable/shape_rect6_white"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="买家已付款"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_12"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/order_distribution_type"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/black_b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_express_free"
                    android:textColor="@color/black_b"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txt_total_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    tools:text="@string/order_total_count_product_placeholder"
                    android:textColor="@color/black_b"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    tools:text="@string/order_total_amount_placeholder"
                    android:textColor="@color/black_b"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:gravity="center_vertical|end">
                <TextView
                    android:id="@+id/txt_pay"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/height_30"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center"
                    android:background="@drawable/shape_rect16_white_border_theme_color"
                    android:text="@string/order_pay"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_cancel_order"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/height_30"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center"
                    android:background="@drawable/shape_rect16_white_border_theme_color"
                    android:text="@string/order_cancel_order"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_confirm_of_receive"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/height_30"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center"
                    android:background="@drawable/shape_rect16_white_border_theme_color"
                    android:text="@string/order_confirm_of_receive"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_refund"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/height_30"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center"
                    android:background="@drawable/shape_rect16_white_border_theme_color"
                    android:text="@string/order_refund"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_comment"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/height_30"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center"
                    android:background="@drawable/shape_rect16_white_border_theme_color"
                    android:text="@string/order_comment"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_14"/>
                <TextView
                    android:id="@+id/txt_delete_order"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/height_30"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center"
                    android:background="@drawable/shape_rect16_white_border_theme_color"
                    android:text="@string/order_delete_order"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_14"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
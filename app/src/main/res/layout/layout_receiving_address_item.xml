<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llay_receiving_address"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="200dp"
            tools:text="胡歌胡歌胡歌胡歌胡歌胡歌胡歌"
            android:textColor="@color/black_b"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:maxLines="1"
            android:singleLine="true"
            tools:text="15606954708"
            android:textColor="@color/black_b"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_default"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/theme_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10">
        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            tools:text="福建省 厦门市 集美区 集美大学集美大学集美大学集美大学集美大学集美大学集美大学"
            android:textColor="@color/black_b"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:gravity="end">
        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/com_edit"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/com_delete"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_16"/>
    </LinearLayout>

</LinearLayout>
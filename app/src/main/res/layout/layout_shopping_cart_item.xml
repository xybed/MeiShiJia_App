<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="#fffef8f6"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:gravity="center_vertical">
            <RadioButton
                android:id="@+id/rb_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5">
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/txt_invalid"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="@color/yellow_a"
                    android:text="@string/order_invalid"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:lineSpacingExtra="2dp"
                        tools:text="          杰威尔（JVR） 男士洗发沐浴套装（洗发水+沐浴露）沐浴液清凉舒爽洗发露控油去屑头洗浴套装 洗护超值装(洗发水500ml+沐浴露500ml）"
                        android:textColor="@color/black_b"
                        android:textSize="@dimen/text_size_16"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rect2_theme_color"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="@dimen/padding_3"
                        android:paddingRight="@dimen/padding_3"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:text="@string/product_business_self"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="3dp"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="￥77"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/text_size_12"/>
                    <ImageView
                        android:id="@+id/img_sub"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/icon_product_sub"
                        android:contentDescription="@null"/>
                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="0"
                        android:textColor="@color/gray_e"
                        android:textSize="@dimen/text_size_12"/>
                    <ImageView
                        android:id="@+id/img_add"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/icon_product_add"
                        android:contentDescription="@null"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>